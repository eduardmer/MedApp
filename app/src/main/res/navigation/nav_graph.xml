    <fragment
        android:id="@+id/loginFragment"
        android:name="com.medapp.ui.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.medapp.ui.DetailsFragment"
        android:label="DetailsFragment" />
